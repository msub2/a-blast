{
  "name": "a-blast",
  "version": "0.1.0",
  "description": "A WebVR FPS mini-game demo using A-Frame by Mozilla VR.",
  "scripts": {
    "build": "webpack --mode=production",
    "build-dev": "webpack --mode=development",
    "start": "webpack-dev-server --host 0.0.0.0 --progress --colors --hot -d --inline",
    "lint": "semistandard -v | snazzy"
  },
  "repository": "aframevr/a-blast",
  "license": "MIT",
  "semistandard": {
    "ignore": [
      "**/vendor/**",
      "build.js"
    ]
  },
  "devDependencies": {
    "semistandard": "^16.0.1",
    "snazzy": "^9.0.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
